{
  "name": "food-ordering",
  "private": true,
  "version": "0.0.0",
  "workspaces": [
    "services/*",
    "packages/*"
  ],
  "scripts": {
    "bootstrap": "npm install",
    "lint": "eslint . --ext .ts,.tsx",
    "typecheck": "tsc -b",
    "test": "npm run test --workspaces",
    "new:service": "node ./scripts/new-service.js",
    "dev:auth": "cd services/auth && npm install && npm run dev",
    "dev:order": "cd services/order && npm install && npm run dev",
    "dev:restaurant": "cd services/restaurant && npm install && npm run dev",
    "dev:kitchen": "cd services/kitchen && npm install && npm run dev"
  },
  "devDependencies": {
    "@types/swagger-jsdoc": "^6.0.4",
    "@types/swagger-ui-express": "^4.1.8",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "eslint": "^8.0.0",
    "husky": "^8.0.0",
    "lint-staged": "^13.0.0",
    "prettier": "^2.0.0",
    "typescript": "^5.0.0"
  }
}
