{
  "compilerOptions": {
    "target": "es2022",
    "module": "commonjs",
    "lib": ["es2022"],
    "moduleResolution": "node",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "noImplicitAny": true,
    "incremental": true,
    "composite": true,
    "declaration": true,
    "declarationMap": true,
    "types": ["node"]
  },
  "exclude": ["node_modules", "dist"]
}

