{
  "compilerOptions": {
    "target": "es2022",
    "module": "commonjs",
    "lib": ["es2022"],
    "moduleResolution": "node",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "noImplicitAny": true,
    "incremental": true,
    "declaration": true,
    "declarationMap": true,
    "types": ["node", "jest"],
    "baseUrl": ".",
    "paths": {
      "@food/event-bus": ["packages/event-bus/src"],
      "@food/event-contracts": ["packages/event-contracts/src"],
      "@food/idempotency": ["packages/idempotency/src"],
      "@food/observability": ["packages/observability/src"],
      "@food/resilience": ["packages/resilience/src"],
      "@food/test-utils": ["packages/test-utils/src"]
    }
  },
  "exclude": ["node_modules", "dist"]
}

